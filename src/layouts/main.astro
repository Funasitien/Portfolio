---
import "@fontsource/poppins";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/800.css";
import "../assets/app.css";

const {
  title = "Portfolio",
  description = "Portfolio principal - Code, Cinéma, Dessin, Musique & 3D au même endroit !",
} = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+xml" href="/logo.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    <meta content={title} property="og:title" />
    <meta content={description} property="og:description" />
    <meta content="https://ws.funa.dev" property="og:url" />
    <meta content="/logo.png" property="og:image" />
    <meta content="#43B581" data-react-helmet="true" name="theme-color" />
    <script is:inline>
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "superlight");
      } else
        document.documentElement.setAttribute(
          "data-theme",
          localStorage.getItem("theme")
        );
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
  </head>
  <style>
    body {
      font-family: "Poppins", "FluentEmoji", sans-serif;
      transition: all 0.25s cubic-bezier(0.427, 0.073, 0.105, 0.997) 0.1s;
    }
  </style>
  <body class="md:overflow-y-hidden">
    <div class="relative min-h-screen flex flex-col justify-center bg-gray-50 dark:bg-gray-800 py-6 sm:py-12">
    
    <div class="absolute inset-0 bg-[url(/core/light_beams.jpg)] dark:bg-[url(/core/dark_beams.jpg)] bg-cover bg-center"></div>
    <div class="absolute inset-0">
      <svg class="text-base-300" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
        <defs>
          <pattern id="bg" patternUnits="userSpaceOnUse" width="60" height="60">
            <path 
              d="M0,0 H130 M0,0 V130" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2"
            />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#bg)"/>
      </svg>
    </div>
    <div
      class="fixed start-0 bottom-0 md:bottom-5 z-50 flex justify-center w-full min-w-full"
    >
      <div
        class="bg-base-100 md:rounded-2xl p-2 flex justify-center gap-2 max-md:w-full"
      >
       <div class="tooltip" data-tip="Accueil">
          <a href="/">
            <img
              src="/icons/home.png"
              class="w-auto h-12 hover:-translate-y-2 hover:scale-110 hover:bg-primary hover:rounded-xl transition-all duration-100 p-1"
              alt="Home Icon (hand draw, pixel)"
            />
          </a>
        </div>
        <div class="tooltip" data-tip="Dessin">
          <a href="/dessin">
            <img
              src="/icons/palette.png"
              class="w-12 h-12 hover:-translate-y-2 hover:scale-110 hover:bg-primary hover:rounded-xl transition-all duration-100 p-1"
              alt="Artist Palette Icon (hand draw, pixel)"
            />
          </a>
        </div>
        <div class="tooltip" data-tip="Modèles 3D">
          <a href="/3d">
            <img
              src="/icons/cube.png"
              class="w-12 h-12 hover:-translate-y-2 hover:scale-110 hover:bg-primary hover:rounded-xl transition-all duration-100 p-1"
              alt="3D Cube Icon (hand draw, pixel)"
            />
          </a>
        </div>
        <div class="tooltip" data-tip="Musique">
          <a href="/musique">
            <img
              src="/icons/disc.png"
              class="w-12 h-12 hover:-translate-y-2 hover:scale-110 hover:bg-primary hover:rounded-xl transition-all duration-100 p-1"
              alt="Music Disc Icon (hand draw, pixel)"
            />
          </a>
        </div>
        <div class="tooltip" data-tip="Films">
          <a href="/films">
            <img
              src="/icons/clap.png"
              class="w-auto h-12 hover:-translate-y-2 hover:scale-110 hover:bg-primary hover:rounded-xl transition-all duration-100 p-1"
              alt="Movie Clap Icon (hand draw, pixel)"
            />
          </a>
        </div>
        <div class="tooltip" data-tip="Projets">
          <a href="/projets">
            <img
              src="/icons/chest.png"
              class="w-auto h-12 hover:-translate-y-2 hover:scale-110 hover:bg-primary hover:rounded-xl transition-all duration-100 p-1"
              alt="Chest Icon (hand draw, pixel)"
            />
          </a>
        </div>
        <div class="tooltip" data-tip="Chaner de thème">
          <button
          data-toggle-theme="superlight,superdark"
          data-act-class="superlight"
          aria-label="Changer de Thème">
          <img
            class="w-12 h-12 hover:-translate-y-2 hover:scale-110 hover:bg-secondary hover:rounded-xl transition-all duration-100 p-1"
            src="/icons/theme.png"
            alt="White Them Palette"
          />
        </button>
        </div>
      </div>
    </div>
    <slot />
    </div>
</html>
